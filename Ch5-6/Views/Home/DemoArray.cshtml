@model Ch5_6.Models.Product[]
@using Ch5_6.Models
@model Product[]
@{
    ViewBag.Title = "DemoArray";
    Layout = "~/Views/_ViewStart.cshtml";
}

@if (Model.Length > 0)
{
    <table>
       <thead><tr><th>Product</th><th>Price</th></tr></thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>$@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No Product Data</h2>
}


